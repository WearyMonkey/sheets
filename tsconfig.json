{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./app",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots" : ["./typings/modules"],
    "jsx": "React",
    "moduleResolution": "node",
    "outDir": "tsc-out",
    "experimentalDecorators": true,
    "lib": ["dom", "es6"]
  },
  "include": [
    "app/**/*",
    "declarations",
    "dts/typescript/lib.es6.d.ts"
  ]
}